---
// Hero component for SafeBox marketing site
---

<section 
  class="hero relative min-h-screen flex items-center overflow-hidden"
  id="hero"
  style="background-color: #050d36;"
>
  <!-- Geometric Background Patterns -->
  <div class="hero-background-patterns absolute inset-0 pointer-events-none overflow-hidden">
    <!-- Pattern 1: Geometric lines (top-left area) -->
    <svg class="hero-geometric-lines absolute top-0 left-0 w-1/2 h-1/2 opacity-30" viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMinYMin meet">
      <line x1="0" y1="150" x2="300" y2="150" stroke="#5ECFFF" stroke-width="1.5" opacity="0.4"/>
      <line x1="150" y1="0" x2="150" y2="300" stroke="#5ECFFF" stroke-width="1.5" opacity="0.4"/>
      <line x1="0" y1="250" x2="400" y2="250" stroke="#5ECFFF" stroke-width="1" opacity="0.3"/>
      <line x1="250" y1="0" x2="250" y2="400" stroke="#5ECFFF" stroke-width="1" opacity="0.3"/>
      <rect x="50" y="50" width="200" height="200" stroke="#5ECFFF" stroke-width="1" opacity="0.25" fill="none"/>
      <rect x="100" y="100" width="150" height="150" stroke="#5ECFFF" stroke-width="1" opacity="0.2" fill="none"/>
    </svg>
    
    <!-- Pattern 2: Circular patterns (center right) -->
    <svg class="hero-patterns-center absolute top-1/3 right-0 w-1/3 h-2/3 opacity-15" viewBox="0 0 400 600" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMaxYMid meet">
      <circle cx="200" cy="200" r="80" stroke="#5ECFFF" stroke-width="1" fill="none" opacity="0.3"/>
      <circle cx="200" cy="200" r="120" stroke="#5ECFFF" stroke-width="1" fill="none" opacity="0.2"/>
      <line x1="200" y1="0" x2="200" y2="400" stroke="#5ECFFF" stroke-width="1" opacity="0.25"/>
      <line x1="100" y1="200" x2="300" y2="200" stroke="#5ECFFF" stroke-width="1" opacity="0.25"/>
      <path d="M50 100 L350 100 L350 300 L50 300 Z" stroke="#5ECFFF" stroke-width="1" fill="none" opacity="0.2"/>
    </svg>
    
    <!-- Pattern 3: Diagonal grid (top right) -->
    <svg class="hero-pattern-diagonal absolute top-0 right-0 w-1/4 h-1/3 opacity-20" viewBox="0 0 300 300" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMaxYMin meet">
      <line x1="0" y1="0" x2="300" y2="300" stroke="#5ECFFF" stroke-width="1" opacity="0.3"/>
      <line x1="0" y1="100" x2="200" y2="300" stroke="#5ECFFF" stroke-width="1" opacity="0.25"/>
      <line x1="0" y1="200" x2="100" y2="300" stroke="#5ECFFF" stroke-width="1" opacity="0.2"/>
      <line x1="100" y1="0" x2="300" y2="200" stroke="#5ECFFF" stroke-width="1" opacity="0.25"/>
      <line x1="200" y1="0" x2="300" y2="100" stroke="#5ECFFF" stroke-width="1" opacity="0.2"/>
    </svg>
    
    <!-- Pattern 4: Hexagonal pattern (bottom left) -->
    <svg class="hero-pattern-hex absolute bottom-0 left-0 w-1/3 h-1/4 opacity-12" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMinYMax meet">
      <path d="M100 50 L200 50 L250 100 L200 150 L100 150 L50 100 Z" stroke="#5ECFFF" stroke-width="1.5" opacity="0.3" fill="none"/>
      <path d="M150 100 L220 100 L250 140 L220 180 L150 180 L120 140 Z" stroke="#5ECFFF" stroke-width="1" opacity="0.25" fill="none"/>
      <circle cx="175" cy="125" r="30" stroke="#5ECFFF" stroke-width="1" opacity="0.2" fill="none"/>
    </svg>
    
    <!-- Pattern 5: Wave pattern (center) -->
    <svg class="hero-pattern-wave absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-1/2 h-1/2 opacity-10" viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid meet">
      <path d="M0 200 Q150 150 300 200 T600 200" stroke="#5ECFFF" stroke-width="2" opacity="0.2" fill="none"/>
      <path d="M0 250 Q150 200 300 250 T600 250" stroke="#5ECFFF" stroke-width="1.5" opacity="0.15" fill="none"/>
      <path d="M0 150 Q150 100 300 150 T600 150" stroke="#5ECFFF" stroke-width="1.5" opacity="0.15" fill="none"/>
    </svg>
    
    <!-- Pattern 6: Dots grid (scattered) -->
    <svg class="hero-pattern-dots absolute top-1/4 left-1/4 w-1/2 h-1/2 opacity-8" viewBox="0 0 400 400" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid meet">
      <circle cx="50" cy="50" r="2" fill="#5ECFFF" opacity="0.4"/>
      <circle cx="150" cy="80" r="1.5" fill="#5ECFFF" opacity="0.3"/>
      <circle cx="250" cy="120" r="2" fill="#5ECFFF" opacity="0.35"/>
      <circle cx="350" cy="150" r="1.5" fill="#5ECFFF" opacity="0.3"/>
      <circle cx="100" cy="200" r="2" fill="#5ECFFF" opacity="0.4"/>
      <circle cx="200" cy="250" r="1.5" fill="#5ECFFF" opacity="0.3"/>
      <circle cx="300" cy="300" r="2" fill="#5ECFFF" opacity="0.35"/>
      <circle cx="80" cy="320" r="1.5" fill="#5ECFFF" opacity="0.3"/>
    </svg>
  </div>

  <div class="container mx-auto px-6 md:px-12 lg:px-16 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center py-20 lg:py-32">
      
      <!-- Left Column: Content -->
      <div class="hero-content space-y-8">
        <!-- Logo -->
        <div 
          class="hero-logo"
          data-animate="logo"
        >
          <h1 class="text-2xl md:text-3xl font-bold text-white tracking-tight">
            SafeBox
          </h1>
        </div>

        <!-- Headline -->
        <h2 
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight"
          data-animate="headline"
        >
          Meet SafeBox <span class="italic" style="color: #5ECFFF;">the private voice assistant you can trust.</span>
        </h2>

        <!-- Subhead -->
        <p 
          class="text-lg md:text-xl text-white leading-relaxed max-w-2xl"
          data-animate="subhead"
        >
          SafeBox helps you get things done without turning you into a prompt engineer. It stays consistent, keeps your info under your control, and tells you when something is unavailable.
        </p>

        <!-- CTAs -->
        <div 
          class="flex flex-col sm:flex-row gap-4"
          data-animate="cta"
        >
          <a 
            href="#get-safebox"
            class="hero-cta-primary inline-flex items-center justify-center px-8 py-4 bg-gray-900 text-white font-medium rounded-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2"
          >
            Get SafeBox
          </a>
          <a 
            href="#demo"
            class="hero-cta-secondary inline-flex items-center justify-center px-8 py-4 bg-white text-gray-900 font-medium rounded-lg border-2 border-gray-300 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2"
          >
            Watch the 60-sec demo
          </a>
        </div>

        <!-- Trust line -->
        <p 
          class="text-sm text-white"
          data-animate="trust"
        >
          No ads. No data resale. No weird surprises.
        </p>
      </div>

      <!-- Right Column: Product Mock -->
      <div 
        class="hero-mock relative flex items-center justify-center gap-4 min-h-[400px] lg:min-h-[500px]"
        data-animate="mock"
      >
        <!-- Main device image -->
        <img 
          src="/transperent_hero_image.png" 
          alt="SafeBox device"
          class="hero-device relative z-10 w-64 md:w-80 h-auto object-contain"
        />
        <!-- Offline image -->
        <img 
          src="/offline.png" 
          alt="Offline aware"
          class="relative z-10 w-48 md:w-64 h-auto object-contain"
        />
      </div>
    </div>
  </div>
</section>

<style>
  @import '../styles/hero.css';
</style>

<script>
  import { initHeroMotion } from '../scripts/heroMotion';
  
  // Initialize hero animations and parallax after DOM is ready
  if (typeof window !== 'undefined') {
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHeroMotion);
    } else {
      initHeroMotion();
    }
  }
</script>
