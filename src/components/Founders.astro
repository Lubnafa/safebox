            <ul class="space-y-2 text-sm text-gray-700">
              <li class="flex items-start gap-2">
                <span class="text-gray-400 mt-1">•</span>
                <span>Clear documentation</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-gray-400 mt-1">•</span>
                <span>Practical delivery</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-gray-400 mt-1">•</span>
                <span>Calm, consistent execution</span>
              </li>
            </ul>
          </div>
        </div>
      </article>
      -->
    </div>
  </div>
</section>

<style>
  @import '../styles/sections.css';
</style>

<script>
  import { initRevealOnScroll } from '../scripts/revealOnScroll';
  
  if (typeof window !== 'undefined') {
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initRevealOnScroll);
    } else {
      initRevealOnScroll();
    }
  }
</script>
