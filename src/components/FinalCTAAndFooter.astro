---
// FinalCTAAndFooter component - Final CTA section and Footer
import FancyHeading from './FancyHeading.astro';

const currentYear = new Date().getFullYear();
---

<!-- Final CTA Section -->
<section 
  class="final-cta py-20 md:py-24 lg:py-32 bg-gray-900 relative overflow-hidden"
  aria-labelledby="final-cta"
>
  <!-- Sparkles Animation Container -->
  <div class="sparkles-container absolute inset-0 flex items-center justify-center pointer-events-none">
    <div class="sparkles-circle">
      <div class="sparkle sparkle-1"></div>
      <div class="sparkle sparkle-2"></div>
      <div class="sparkle sparkle-3"></div>
      <div class="sparkle sparkle-4"></div>
      <div class="sparkle sparkle-5"></div>
      <div class="sparkle sparkle-6"></div>
      <div class="sparkle sparkle-7"></div>
      <div class="sparkle sparkle-8"></div>
    </div>
  </div>
  
  <div class="container mx-auto px-6 md:px-12 lg:px-16 relative z-10">
    
     
        
        <!-- Left Column: Heading, Subhead, and Buttons -->
        <div class="final-cta-content" data-reveal>
          <h2 
            id="final-cta"
            class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-white leading-tight"
          >
            Ready for an assistant you can <span class="italic" style="color: #5ECFFF;">trust?</span>
          </h2>
          <p class="text-lg md:text-xl text-gray-300 leading-relaxed mb-6">
            Join the waitlist to see SafeBox in action and get early access updates.
          </p>
          
          <!-- Initial Buttons -->
          <div class="final-cta-buttons flex flex-col sm:flex-row gap-4">
            <button
              type="button"
              class="final-cta-primary inline-flex items-center justify-center px-8 py-4 bg-blue-600 text-white font-medium rounded-lg transition-all duration-300 hover:bg-blue-700 hover:shadow-xl hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              data-waitlist-trigger
            >
              Join the waitlist
            </button>
            <a
              href="#footer"
              class="final-cta-tertiary inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-gray-900 font-medium rounded-lg transition-all duration-300 hover:bg-gray-100 hover:shadow-lg hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-900"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Contact
            </a>
          </div>

          <!-- Inline Email Form (hidden initially) -->
          <div class="final-cta-form-wrapper hidden mt-6" data-waitlist-form>
            <form class="final-cta-form flex flex-col sm:flex-row gap-3" data-waitlist-form-element>
              <label for="waitlist-email" class="sr-only">Email address</label>
              <input
                type="email"
                id="waitlist-email"
                name="email"
                class="final-cta-input flex-1 px-4 py-3 text-base border rounded-lg focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent transition-colors"
                placeholder="you@domain.com"
                required
                aria-label="Email address"
                aria-describedby="waitlist-error"
              />
              <button
                type="submit"
                class="final-cta-submit inline-flex items-center justify-center px-8 py-3 bg-white text-gray-900 font-medium rounded-lg transition-all duration-300 hover:shadow-lg hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-900"
              >
                Join
              </button>
            </form>
            <div 
              id="waitlist-error" 
              class="final-cta-error hidden mt-2 text-sm text-red-400"
              role="alert"
              aria-live="polite"
            >
              Please enter a valid email.
            </div>
          </div>

          <!-- Success Message (hidden initially) -->
          <div class="final-cta-success hidden mt-6" data-waitlist-success>
            <p class="text-lg text-white">
              You're on the list. We'll be in touch.
            </p>
          </div>
        </div>

        <!-- Right Column: Empty for now, can be used for visual or additional content -->
        <div class="final-cta-actions" data-reveal>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Footer Section -->
<footer 
  class="footer bg-white border-t border-gray-200 py-12 md:py-16"
  id="footer"
>
  <div class="container mx-auto px-6 md:px-12 lg:px-16">
    <!-- Footer Columns -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 mb-12">
      
      <!-- Column 1: Product -->
      <div class="footer-column">
        <h3 class="footer-column-title text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">
          Product
        </h3>
        <ul class="footer-links space-y-3">
          <li>
            <a href="#hero" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              Overview
            </a>
          </li>
          <li>
            <a href="#how-it-works" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              How it works
            </a>
          </li>
          <li>
            <a href="#trust-privacy" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              Privacy
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 2: Company -->
      <div class="footer-column">
        <h3 class="footer-column-title text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">
          Company
        </h3>
        <ul class="footer-links space-y-3">
          <li>
            <a href="#founders" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              Founders
            </a>
          </li>
          <li>
            <a href="#footer" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 3: For You -->
      <div class="footer-column">
        <h3 class="footer-column-title text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">
          For You
        </h3>
        <ul class="footer-links space-y-3">
          <li>
            <a href="#built-for-real-life" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              Small Business
            </a>
          </li>
          <li>
            <a href="#built-for-real-life" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              Families
            </a>
          </li>
          <li>
            <a href="#built-for-real-life" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              Power Users
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 4: Legal -->
      <div class="footer-column">
        <h3 class="footer-column-title text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">
          Legal
        </h3>
        <ul class="footer-links space-y-3">
          <li>
            <a href="#terms" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              Terms
            </a>
          </li>
          <li>
            <a href="#privacy-policy" class="footer-link text-sm text-gray-600 hover:text-gray-900 transition-colors">
              Privacy Policy
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Footer Bottom Row -->
    <div class="footer-bottom flex flex-col md:flex-row md:items-center md:justify-between gap-4 pt-8 border-t border-gray-200">
      <p class="text-sm text-gray-600">
        Â© {currentYear} SafeBox. All rights reserved.
      </p>
      <div class="flex flex-col md:flex-row items-center gap-4">
        <p class="text-sm text-gray-600">
          No ads. No data resale. No weird surprises.
        </p>
        <p class="text-sm text-gray-500">
          Built with <span class="font-semibold text-gray-700">Clarity</span>
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  @import '../styles/sections.css';
</style>

<script>
  import { initRevealOnScroll } from '../scripts/revealOnScroll';
  import { initWaitlist } from '../scripts/waitlist';
  
  if (typeof window !== 'undefined') {
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        initRevealOnScroll();
        initWaitlist();
      });
    } else {
      initRevealOnScroll();
      initWaitlist();
    }
  }
</script>
